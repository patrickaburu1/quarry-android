<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    tools:context="com.example.user.quarryapp.Fragments.PostExpenses">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expenses"
        android:entries="@array/expenses"
        android:layout_marginTop="10dp"></Spinner>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost"
        android:inputType="number"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/postExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Expenses"
        android:background="@drawable/angle2"/>


</LinearLayout>
